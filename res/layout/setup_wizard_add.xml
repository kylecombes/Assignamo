<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Setup.Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setup_wizard_add_screen_title"
        style="@style/Setup.TextView.Title"
        android:paddingBottom="10dp"
        android:text="@string/setup_teachers_title" />

    <TextView
        android:id="@+id/setup_wizard_add_screen_message"
        style="@style/Setup.TextView.Message"
        android:text="@string/setup_teachers_message" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<Button android:id="@+id/setup_add_button"
		    style="@style/Setup.AddButton"
		    android:background="@android:drawable/ic_menu_add"/>
    </RelativeLayout>

    <ListView style="@style/Setup.ListView.ListView" />

</LinearLayout>