			    <Button android:id="@+id/course_edit_days_select_day3_button2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"/>
		    </TableRow>
		    <!-- Day 4 -->
		    <TableRow android:layout_width="wrap_content"
			    android:layout_height="wrap_content">
			    <CheckBox android:id="@+id/course_edit_days_select_day4_checkbox"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" />
			    <TextView android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/CourseDaysSelect.Text"
			        android:text="@string/course_edit_days_select_wednesday"/>
