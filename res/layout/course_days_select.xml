			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"/>
			    <TextView android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/CourseDaysSelect.Text"
			        android:text="-"/>
			    <Button android:id="@+id/course_edit_days_select_day6_button2"
