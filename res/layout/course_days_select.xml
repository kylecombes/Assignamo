		    </TableRow>
		    <!-- Day 5 -->
		    <TableRow android:layout_width="wrap_content"
			    android:layout_height="wrap_content">
			    <CheckBox android:id="@+id/course_edit_days_select_day5_checkbox"
			        android:layout_width="wrap_content"
