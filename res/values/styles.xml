<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--     Tabs     -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="Widget.TabPageIndicator.Text">
        <item name="android:textColor">@color/list_text</item>
    </style>
    
    <!--    ListView    -->
    
    <style name="ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:cacheColorHint">@color/background</item>
    </style>
    
    <style name="ListView.Assignment">
        <item name="android:divider">@color/assignment_list_divider</item>
    </style>
    
    <!--    Empty List    -->
    
    <style name="ListEmpty">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/list_text</item>
        <item name="android:paddingLeft">@dimen/activity_edge_padding</item>
        <item name="android:paddingRight">@dimen/activity_edge_padding</item>
    </style>
    
    <style name="ListEmptyTitle" parent="ListEmpty">
        <item name="android:textSize">23sp</item>
        <item name="android:paddingTop">@dimen/activity_edge_padding</item>
    </style>
    
    <style name="ListEmptyDescription" parent="ListEmpty">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/activity_edge_padding</item>
    </style>
    
    <!--    List Items    -->
    
    <style name="ListText">
        <item name="android:textColor">@color/list_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_side_padding</item>
        <item name="android:paddingRight">@dimen/list_item_side_padding</item>
    </style>
    
    <style name="ListText.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">@dimen/list_item_top_bottom_padding</item>
    </style>
    
    <style name="ListText.Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/list_item_top_bottom_padding</item>
    </style>
    
    <style name="ListText.Secondary.Left">
        <item name="android:paddingRight">@dimen/list_item_horizontal_spacing</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="ListText.Secondary.Left.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListText.Secondary.Right">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="ListText.Due">
        <item name="android:textSize">15sp</item>
    </style>
    
    <!-- TextView Styling -->
    
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextView.ViewActivity">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="TextView.ViewActivity.Title">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <style name="TextView.ViewActivity.Notes">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="TextView.ViewActivity.Label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingTop">@dimen/view_activity_label_above_padding</item>
    </style>
    
    <style name="TextView.EditActivity.Label" parent="TextView">
    </style>
    
    <!-- Text Box Styling -->
    
    <style name="TextBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextBox.Title">
        <item name="android:inputType">textCapSentences|textAutoCorrect</item>
    </style>
    
    <style name="TextBox.Description">
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoCorrect</item>
	    <item name="android:minLines">5</item>
	    <item name="android:gravity">top</item>
    </style>
    
    <style name="TextBox.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>
    
    <!-- Button Styling -->
    
    <style name="Button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Button.ButtonBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="Button.ButtonBar.Cancel">
        <item name="android:onClick">cancelPressed</item>
    </style>
    
    <style name="Button.ButtonBar.Save">
        <item name="android:onClick">savePressed</item>
    </style>
    
    <style name="ButtonBar" parent="@android:style/ButtonBar">
        
    </style>
    
    <!-- Course Days Select -->
    
    <style name="CourseDaysSelect.Text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
    
    <style name="CourseDaysSelect.Text.Title">
        <item name="android:paddingLeft">@dimen/course_edit_days_select_text_padding</item>
        <item name="android:paddingBottom">@dimen/course_edit_days_select_text_padding</item>
    </style>
    
    <style name="CourseDaysSelect.Text.Divider">
        <item name="android:paddingLeft">@dimen/course_edit_days_select_text_padding</item>
        <item name="android:paddingRight">@dimen/course_edit_days_select_text_padding</item>
    </style>
    
    <style name="CourseDaysSelect.Buttons" parent="android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CourseDaysSelect.CheckBoxes">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="CourseDaysSelect.Row">
        <item name="android:paddingTop">@dimen/course_edit_days_select_row_padding</item>
        <item name="android:paddingBottom">@dimen/course_edit_days_select_row_padding</item>
    </style>
    
</resources>